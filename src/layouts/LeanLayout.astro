---
import "styles/theme.css"
import ThemeIcon from 'components/ThemeIcon.astro';

interface Props {
	isEnhanced?: boolean
}
const { isEnhanced } = Astro.props

---
<!doctype html>
<html lang={Astro.currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<></>
	{isEnhanced && <slot name="back" />}
	<ThemeIcon float={true} hide={!isEnhanced} />
	<body>
		<div id="content">
			<slot />
		</div>
	</body>
	{ isEnhanced && 	
	<footer><slot name="links" /></footer>
	}
</html>

<style>
	html,
	body {
		width: 100%;
		height: 100%;
	}

	#content {
		padding: 1rem 3rem 5rem 2rem;;
	}

	footer {
		padding: 2rem;
    	font-size: .75rem;
		display: flex;
		flex-direction: column;
		align-items: end;
	}
</style>
